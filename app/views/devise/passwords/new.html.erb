<div class="w3-content" style="max-width:1100px;">
  <div class="w3-container w3-margin-top">
    <h1>Forgot your password?</h1>
  </div>

  <div class="w3-container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'w3-input w3-border' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", :class => 'w3-btn w3-red w3-margin-top' %>
    </div>
    <% end %>

    <%= link_to "Back", :back, :class => 'w3-btn w3-black w3-margin-top' %>

  </div>
</div>
